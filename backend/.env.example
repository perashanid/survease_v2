# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
DB_NAME=survey_platform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://127.0.0.1:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this-in-production
COOKIE_SECRET=your-cookie-secret-change-this

# Logging
LOG_LEVEL=info
ENABLE_LOGGING=true

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PUBLIC_SURVEYS=true
ENABLE_SURVEY_IMPORT=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_ANALYTICS=true

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@surveyplatform.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Survey Configuration
MAX_QUESTIONS_PER_SURVEY=100
MAX_OPTIONS_PER_QUESTION=50
MAX_SURVEY_TITLE_LENGTH=200
MAX_SURVEY_DESCRIPTION_LENGTH=1000

# Response Configuration
MAX_TEXT_RESPONSE_LENGTH=5000
ENABLE_ANONYMOUS_RESPONSES=true

# Cache Configuration (Optional)
CACHE_TTL=3600
ENABLE_CACHE=false

# API Configuration
API_VERSION=v1
API_TIMEOUT=30000

# Security Headers
ENABLE_HELMET=true
ENABLE_RATE_LIMIT=true
TRUST_PROXY=false

# AI Configuration (Gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp
AI_INSIGHTS_CACHE_TTL=3600
AI_GENERATION_TIMEOUT=30000
MAX_EXPORT_SIZE_MB=50
ENABLE_AI_FEATURES=true
