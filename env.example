# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/survey_platform

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=8000
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for contact forms and notifications)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@surveyplatform.com
CONTACT_EMAIL=support@surveyplatform.com
SEND_AUTO_REPLY=true

# Frontend Environment Variables
VITE_API_BASE_URL=https://your-api-domain.com/api
